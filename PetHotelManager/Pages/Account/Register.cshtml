@page
@model PetHotelManager.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Đăng ký";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow">
            <div class="card-body">
                <h2 class="card-title text-center mb-4">Đăng ký tài khoản</h2>

                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <form method="post" id="registerForm">
                    <div class="mb-3">
                        <label asp-for="Input.Username" class="form-label"></label>
                        <input asp-for="Input.Username" class="form-control" autocomplete="username" />
                        <span asp-validation-for="Input.Username" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.Email" class="form-label"></label>
                        <input asp-for="Input.Email" class="form-control" autocomplete="email" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.Password" class="form-label"></label>
                        <input asp-for="Input.Password" class="form-control" autocomplete="new-password" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                        <div class="form-text">Mật khẩu phải có ít nhất 8 ký tự, bao gồm chữ hoa, chữ thường và số.</div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.FullName" class="form-label"></label>
                        <input asp-for="Input.FullName" class="form-control" autocomplete="name" />
                        <span asp-validation-for="Input.FullName" class="text-danger"></span>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary" id="submitBtn">
                            Đăng ký
                        </button>
                    </div>

                    <div class="text-center mt-3">
                        <p class="mb-0">
                            Đã có tài khoản? <a asp-page="/Account/Login">Đăng nhập tại đây</a>
                        </p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Prevent duplicate submissions
        document.getElementById('registerForm').addEventListener('submit', function() {
            var btn = document.getElementById('submitBtn');
            btn.disabled = true;
            btn.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Đang xử lý...';
        });
    </script>
}
