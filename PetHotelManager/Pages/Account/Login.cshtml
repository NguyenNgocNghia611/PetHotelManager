@page
@model PetHotelManager.Pages.Account.LoginModel
@{
ViewData["Title"] = "Đăng nhập";
}

<h2>Đăng nhập</h2>

@if (!string.IsNullOrEmpty(Model.Error))
{
<div class="alert alert-danger">@Model.Error</div>
}

<form method="post" class="mt-3" asp-route-ReturnUrl="@Model.ReturnUrl">
    <div class="mb-3">
        <label class="form-label">Tên đăng nhập hoặc Email</label>
        <input asp-for="Input.UserNameOrEmail" class="form-control" />
        <span class="text-danger" asp-validation-for="Input.UserNameOrEmail"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">Mật khẩu</label>
        <input asp-for="Input.Password" class="form-control" />
        <span class="text-danger" asp-validation-for="Input.Password"></span>
    </div>
    <div class="form-check mb-3">
        <input asp-for="Input.RememberMe" class="form-check-input" />
        <label class="form-check-label" for="Input_RememberMe">Ghi nhớ đăng nhập</label>
    </div>
    <button class="btn btn-primary">Đăng nhập</button>
</form>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}