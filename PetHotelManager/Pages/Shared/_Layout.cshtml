@using Microsoft.AspNetCore.Identity
@using System.Security.Claims
@{
    var  isAuthenticated = User?.Identity?.IsAuthenticated ?? false;
    bool isAdmin         = User.IsInRole("Admin");
    bool isStaff         = User.IsInRole("Staff");
    bool isVet           = User.IsInRole("Veterinarian");
    bool isCustomer      = User.IsInRole("Customer");
    var  userName        = isAuthenticated ? User.Identity!.Name : "Guest";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - Pet Hotel Manager</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
</head>
<body class="bg-light">
<header>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container-fluid">
            <a class="navbar-brand fw-semibold" href="/">PetHotelManager</a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#topNav" aria-controls="topNav"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="topNav">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item"><a class="nav-link" href="/">Trang chủ</a></li>

                    @* Admin *@
                    @if (isAdmin)
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">Quản trị</a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="/Services">Dịch vụ</a></li>
                                <li><a class="dropdown-item" href="/Products">Sản phẩm</a></li>
                                <li><a class="dropdown-item" href="/Rooms">Phòng</a></li>
                                <li><a class="dropdown-item" href="/RoomTypes">Loại phòng</a></li>
                                <li><a class="dropdown-item" href="/Invoices">Hóa đơn</a></li>
                                <li><a class="dropdown-item" href="/Customers">Khách hàng</a></li>
                                <li><a class="dropdown-item" asp-page="/Admin/Users/Index">Nhân Viên</a></li>
                                <li>
                                    <hr class="dropdown-divider"/>
                                </li>
                                <li><a class="dropdown-item" asp-page="/Inventory/Receive">Kho (giao dịch tồn)</a></li>
                            </ul>
                        </li>
                    }

                    @* Staff *@
                    @if (isStaff)
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">Nghiệp vụ (Staff)</a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="/Appointments">Lịch hẹn</a></li>
                                <li><a class="dropdown-item" href="/Rooms/Status">Tình trạng phòng</a></li>
                                <li><a class="dropdown-item" href="/Pets">Quản lý thú cưng</a></li>
                                <li><a class="dropdown-item" href="/MedicalRecords">Hồ sơ y tế</a></li>
                                <li><a class="dropdown-item" href="/Invoices">Hóa đơn</a></li>
                                <li>
                                    <hr class="dropdown-divider"/>
                                </li>
                                <li><h6 class="dropdown-header">Kho</h6></li>
                                <li><a class="dropdown-item" asp-page="/Inventory/Receive">Nhập kho</a></li>
                                <li><a class="dropdown-item" asp-page="/Inventory/Issue">Xuất kho</a></li>
                                <li><a class="dropdown-item" asp-page="/Inventory/Stock">Tồn kho</a></li>
                                <li><a class="dropdown-item" asp-page="/Inventory/Transactions">Lịch sử giao dịch</a></li>
                            </ul>
                        </li>
                    }

                    @* Veterinarian *@
                    @if (isVet)
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">Bác sĩ thú y</a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="/Appointments">Lịch hẹn</a></li>
                                <li><a class="dropdown-item" href="/MedicalRecords">Hồ sơ khám</a></li>
                            </ul>
                        </li>
                    }

                    @* Customer *@
                    @if (isCustomer)
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">Khách hàng</a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="/Customer/Profile">Hồ sơ</a></li>
                                <li><a class="dropdown-item" href="/MyPets">Thú cưng của tôi</a></li>
                                <li><a class="dropdown-item" href="/Appointments">Lịch hẹn của tôi</a></li>
                                <li><a class="dropdown-item" href="/Invoices">Hóa đơn của tôi</a></li>
                            </ul>
                        </li>
                    }

                    <li class="nav-item"><a class="nav-link" href="/swagger">API Docs</a></li>
                </ul>

                <div class="d-flex align-items-center text-white">
                    <span class="me-3">Xin chào, @userName</span>
                    @if (isAuthenticated)
                    {
                        <form method="post" asp-page="/Account/Logout" class="d-inline">
                            <button type="submit" class="btn btn-outline-light btn-sm">Đăng xuất</button>
                        </form>
                    }
                    else
                    {
                        <a class="btn btn-light btn-sm" href="/Account/Login">Đăng nhập</a>
                    }
                </div>
            </div>
        </div>
    </nav>
</header>

<main role="main" class="container my-4">
    @RenderBody()
</main>

<footer class="border-top py-3 bg-white">
    <div class="container text-muted small">
        © @(DateTime.Now.Year) PetHotelManager
    </div>
</footer>

@RenderSection("Scripts", required: false)

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>