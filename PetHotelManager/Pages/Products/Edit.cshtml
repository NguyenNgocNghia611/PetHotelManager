@page
@model PetHotelManager.Pages.Products.EditModel
@{
    ViewData["Title"] = "Sửa sản phẩm";
}

<h2 class="mb-3">Sửa sản phẩm #@Model.Form.Id</h2>

@if (!string.IsNullOrEmpty(Model.Error))
{
    <div class="alert alert-danger">@Model.Error</div>
}

<form method="post" class="row g-3">
    <input type="hidden" asp-for="Form.Id" />
    <div class="col-md-6">
        <label class="form-label">Tên</label>
        <input asp-for="Form.Name" class="form-control" />
        <span class="text-danger" asp-validation-for="Form.Name"></span>
    </div>
    <div class="col-md-3">
        <label class="form-label">Giá</label>
        <input asp-for="Form.Price" type="number" step="0.01" class="form-control" />
        <span class="text-danger" asp-validation-for="Form.Price"></span>
    </div>
    <div class="col-md-3">
        <label class="form-label">Tồn kho</label>
        <input asp-for="Form.StockQuantity" type="number" class="form-control" />
        <span class="text-danger" asp-validation-for="Form.StockQuantity"></span>
    </div>
    <div class="col-md-3">
        <label class="form-label">Đơn vị</label>
        <input asp-for="Form.Unit" class="form-control" />
        <span class="text-danger" asp-validation-for="Form.Unit"></span>
    </div>
    <div class="col-md-3 d-flex align-items-center">
        <div class="form-check mt-4">
            <input class="form-check-input" asp-for="Form.IsActive" />
            <label class="form-check-label" asp-for="Form.IsActive">Hoạt động</label>
        </div>
    </div>

    <div class="col-12">
        <button class="btn btn-primary">Lưu</button>
        <a href="/Products" class="btn btn-outline-secondary">Hủy</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}