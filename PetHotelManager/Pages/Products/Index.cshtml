@page
@model PetHotelManager.Pages.Products.IndexModel
@{
    ViewData["Title"] = "Quản lý Sản phẩm";
}

<h2 class="mb-3">Quản lý Sản phẩm</h2>

<div class="d-flex justify-content-between mb-3">
    <form method="get" class="d-flex gap-2">
        <input name="Search" value="@Model.Search" class="form-control form-control-sm" placeholder="Tìm theo tên / đơn vị" />
        <button class="btn btn-sm btn-outline-primary">Lọc</button>
    </form>
    <a class="btn btn-sm btn-primary" href="/Products/Create">+ Thêm mới</a>
</div>

@if (!string.IsNullOrEmpty(Model.Error))
{
    <div class="alert alert-danger">@Model.Error</div>
}
@if (!string.IsNullOrEmpty(Model.Success))
{
    <div class="alert alert-success">@Model.Success</div>
}

<div class="table-responsive">
    <table class="table table-sm align-middle">
        <thead>
            <tr>
                <th>#</th>
                <th>Tên</th>
                <th>Giá</th>
                <th>Tồn kho</th>
                <th>Đơn vị</th>
                <th>Trạng thái</th>
                <th style="width:160px"></th>
            </tr>
        </thead>
        <tbody>
        @if (Model.Items.Count > 0)
        {
            foreach (var p in Model.Items)
            {
                <tr class="@(p.IsActive ? "" : "table-light")">
                    <td>@p.Id</td>
                    <td>@p.Name</td>
                    <td>@p.Price.ToString("n0")</td>
                    <td>@p.StockQuantity</td>
                    <td>@p.Unit</td>
                    <td>
                        <span class="badge @(p.IsActive ? "bg-success" : "bg-secondary")">
                            @(p.IsActive ? "Active" : "Inactive")
                        </span>
                    </td>
                    <td class="d-flex gap-1">
                        <a class="btn btn-sm btn-outline-secondary" href="/Products/Edit?id=@p.Id">Sửa</a>
                        <form method="post" asp-page-handler="Delete" onsubmit="return confirm('Xác nhận xóa sản phẩm?');">
                            <input type="hidden" name="id" value="@p.Id" />
                            <button class="btn btn-sm btn-outline-danger">Xóa</button>
                        </form>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr><td colspan="7" class="text-center text-muted">Không có dữ liệu</td></tr>
        }
        </tbody>
    </table>
</div>