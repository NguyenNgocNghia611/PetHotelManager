@page
@model PetHotelManager.Pages.Rooms.IndexModel
@{
    ViewData["Title"] = "Quản lý Phòng";
}

<h2 class="mb-3">Quản lý Phòng</h2>

<div class="d-flex justify-content-between mb-3">
    <form method="get" class="d-flex gap-2">
        <input name="Search" value="@Model.Search" class="form-control form-control-sm" placeholder="Tìm theo số phòng / loại / trạng thái" />
        <button class="btn btn-sm btn-outline-primary">Lọc</button>
    </form>
    <a class="btn btn-sm btn-primary" href="/Rooms/Create">+ Thêm mới</a>
</div>

@if (!string.IsNullOrEmpty(Model.Error))
{
    <div class="alert alert-danger">@Model.Error</div>
}
@if (!string.IsNullOrEmpty(Model.Success))
{
    <div class="alert alert-success">@Model.Success</div>
}

<div class="table-responsive">
    <table class="table table-sm align-middle">
        <thead>
            <tr>
                <th>#</th>
                <th>Số phòng</th>
                <th>Loại</th>
                <th>Giá/ngày</th>
                <th>Trạng thái</th>
                <th style="width:240px"></th>
            </tr>
        </thead>
        <tbody>
        @if (Model.Items.Count > 0)
        {
            foreach (var r in Model.Items)
            {
                <tr>
                    <td>@r.Id</td>
                    <td>@r.RoomNumber</td>
                    <td>@r.RoomTypeName</td>
                    <td>@r.PricePerDay.ToString("n0")</td>
                    <td>
                        <form method="post" asp-page-handler="UpdateStatus" class="d-flex gap-2">
                            <input type="hidden" name="id" value="@r.Id" />
                            <select class="form-select form-select-sm" name="status">
                                @foreach (var s in PetHotelManager.Pages.Rooms.IndexModel.StatusOptions)
                                {
                                    if (r.Status == s)
                                    {
                                        <option value="@s" selected="selected">@s</option>
                                    }
                                    else
                                    {
                                        <option value="@s">@s</option>
                                    }
                                }
                            </select>
                            <button class="btn btn-sm btn-outline-primary">Cập nhật</button>
                        </form>
                    </td>
                    <td class="d-flex gap-1">
                        <a class="btn btn-sm btn-outline-secondary" href="/Rooms/Edit?id=@r.Id">Sửa</a>
                        <form method="post" asp-page-handler="Delete" onsubmit="return confirm('Xác nhận xóa phòng?');">
                            <input type="hidden" name="id" value="@r.Id" />
                            <button class="btn btn-sm btn-outline-danger">Xóa</button>
                        </form>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr><td colspan="6" class="text-center text-muted">Không có dữ liệu</td></tr>
        }
        </tbody>
    </table>
</div>