@page
@model PetHotelManager.Pages.Rooms.CreateModel
@{
    ViewData["Title"] = "Thêm phòng";
}

<h2 class="mb-3">Thêm phòng</h2>

@if (!string.IsNullOrEmpty(Model.Error))
{
    <div class="alert alert-danger">@Model.Error</div>
}

<form method="post" class="row g-3">
    <div class="col-md-4">
        <label class="form-label">Số phòng</label>
        <input asp-for="Form.RoomNumber" class="form-control" />
        <span class="text-danger" asp-validation-for="Form.RoomNumber"></span>
    </div>
    <div class="col-md-4">
        <label class="form-label">Loại phòng</label>
        <select asp-for="Form.RoomTypeId" class="form-select">
            <option value="">-- chọn --</option>
            @foreach (var t in Model.RoomTypes)
            {
                <option value="@t.Id">@t.TypeName (@t.PricePerDay.ToString("n0")/ngày)</option>
            }
        </select>
        <span class="text-danger" asp-validation-for="Form.RoomTypeId"></span>
    </div>
    <div class="col-md-4">
        <label class="form-label">Trạng thái</label>
        <select asp-for="Form.Status" class="form-select">
            <option>Available</option>
            <option>Occupied</option>
            <option>Cleaning</option>
            <option>Maintenance</option>
        </select>
        <span class="text-danger" asp-validation-for="Form.Status"></span>
    </div>

    <div class="col-12">
        <button class="btn btn-primary">Lưu</button>
        <a href="/Rooms" class="btn btn-outline-secondary">Hủy</a>
    </div>
</form>