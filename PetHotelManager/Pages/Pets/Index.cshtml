@page "/pets"
@model PetHotelManager.Pages.Pets.IndexModel
@{
    ViewData["Title"] = "Quản lý Thú cưng";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center">
    <h1>@ViewData["Title"]</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <a asp-page="Create" class="btn btn-sm btn-outline-primary">
            <i class="bi bi-plus-circle-fill"></i>
            Thêm mới Thú cưng
        </a>
    </div>
</div>

<div class="table-responsive">
    <table class="table table-striped table-sm">
        <thead>
            <tr>
                <th scope="col">Ảnh</th>
                <th scope="col">Tên Thú cưng</th>
                <th scope="col">Loài</th>
                <th scope="col">Chủ sở hữu</th>
                <th scope="col" class="text-end">Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var pet in Model.PetList)
            {
                <tr>
                    <td>
                        <img src="@(pet.ImageUrl ?? "/images/placeholder.png")" alt="Ảnh thú cưng" style="width: 50px; height: 50px; object-fit: cover; border-radius: 5px;" />
                    </td>
                    <td>@pet.Name</td>
                    <td>@pet.Species</td>
                    <td>@pet.OwnerName</td>
                    <td class="text-end">
                         <form method="post" class="d-inline">
                            <a asp-page="./Details" asp-route-id="@pet.Id" class="btn btn-sm btn-outline-info">Xem</a>
                            <a asp-page="./Edit" asp-route-id="@pet.Id" class="btn btn-sm btn-outline-secondary">Sửa</a>
                            <button type="submit" asp-page-handler="Delete" asp-route-id="@pet.Id" class="btn btn-sm btn-outline-danger" onclick="return confirm('Bạn có chắc chắn muốn xóa thú cưng này và toàn bộ lịch sử liên quan?')">Xóa</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>