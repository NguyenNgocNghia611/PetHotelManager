@page
@model PetHotelManager.Pages.Veterinarian.MedicalRecords.IndexModel
@{
    ViewData["Title"] = "Quản lý Hồ sơ Y tế";
}

<div class="container mt-4">
    <h2 class="mb-4">Quản lý Hồ sơ Y tế</h2>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger">@Model.ErrorMessage</div>
    }

    <div class="row mb-4">
        <div class="col-md-6">
            <form method="get" class="card p-3">
                <label class="form-label fw-bold">Chọn Thú cưng:</label>
                <div class="input-group">
                    <select name="SelectedPetId" class="form-select" required>
                        <option value="">-- Chọn thú cưng --</option>
                        @foreach (var pet in Model.Pets)
                        {
                            <option value="@pet.Id" selected="@(Model.SelectedPetId == pet.Id)">
                                @pet.Name (@pet.Species) - Chủ: @pet.OwnerName
                            </option>
                        }
                    </select>
                    <button type="submit" class="btn btn-primary">Xem hồ sơ</button>
                </div>
            </form>
        </div>
        <div class="col-md-6 text-end">
            <a asp-page="./Create" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Tạo Hồ sơ Mới
            </a>
        </div>
    </div>

    @if (Model.SelectedPetId.HasValue)
    {
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Hồ sơ Y tế của thú cưng đã chọn</h5>
            </div>
            <div class="card-body">
                @if (Model.MedicalRecords.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>Ngày khám</th>
                                    <th>Triệu chứng</th>
                                    <th>Chẩn đoán</th>
                                    <th>Bác sĩ</th>
                                    <th>Đơn thuốc</th>
                                    <th>Thao tác</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var record in Model.MedicalRecords)
                                {
                                    <tr>
                                        <td>@record.ExaminationDate.ToString("dd/MM/yyyy HH:mm")</td>
                                        <td>@(record.Symptoms ?? "-")</td>
                                        <td>@(record.Diagnosis ?? "-")</td>
                                        <td>@(record.VeterinarianName ?? "-")</td>
                                        <td>
                                            @if (record.Prescriptions?.Any() == true)
                                            {
                                                <span class="badge bg-info">@record.Prescriptions.Count thuốc</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">Không có</span>
                                            }
                                        </td>
                                        <td>
                                            <a asp-page="./Details" asp-route-id="@record.Id" class="btn btn-sm btn-primary">Chi tiết</a>
                                            <a asp-page="./Edit" asp-route-id="@record.Id" class="btn btn-sm btn-warning">Sửa</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="alert alert-info">
                        Thú cưng này chưa có hồ sơ y tế nào.
                    </div>
                }
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-secondary">
            <i class="bi bi-info-circle"></i> Vui lòng chọn thú cưng để xem hồ sơ y tế.
        </div>
    }
</div>
