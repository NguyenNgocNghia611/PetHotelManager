@page
@model PetHotelManager.Pages.MedicalRecords.IndexModel
@{
    ViewData["Title"] = "Danh sách Hồ sơ Khám bệnh";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center mb-3">
    <h1>@ViewData["Title"]</h1>
    <div>
        <a asp-page="./Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Tạo hồ sơ khám mới
        </a>
    </div>
</div>
<hr />

<!-- Form tìm kiếm -->
<form method="get" class="row g-3 mb-4">
    <div class="col-md-4">
        <label for="petId" class="form-label">Tìm theo Pet ID</label>
        <input type="number" class="form-control" id="petId" name="petId" value="@Model.PetId" placeholder="Nhập mã Pet...">
    </div>
    <div class="col-md-4">
        <label for="searchTerm" class="form-label">Tìm theo Bác sĩ/Triệu chứng/Chẩn đoán</label>
        <input type="text" class="form-control" id="searchTerm" name="searchTerm" value="@Model.SearchTerm" placeholder="Nhập từ khóa...">
    </div>
    <div class="col-md-4 align-self-end">
        <button type="submit" class="btn btn-primary">
            <i class="bi bi-search"></i> Tìm kiếm
        </button>
        <a asp-page="./Index" class="btn btn-secondary">
            <i class="bi bi-arrow-clockwise"></i> Tất cả
        </a>
    </div>
</form>

@if (Model.MedicalRecords.Any())
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Mã HĐ</th>
                    <th>Pet ID</th>
                    <th>Ngày khám</th>
                    <th>Triệu chứng</th>
                    <th>Chẩn đoán</th>
                    <th>Bác sĩ</th>
                    <th>Số thuốc</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var record in Model.MedicalRecords)
                {
                    <tr>
                        <td><strong>#@record.Id</strong></td>
                        <td>
                            <a asp-page="/Pets/Details" asp-route-id="@record.PetId" class="text-decoration-none">
                                Pet #@record.PetId
                            </a>
                        </td>
                        <td>@record.ExaminationDate.ToLocalTime().ToString("dd/MM/yyyy HH:mm")</td>
                        <td>@(string.IsNullOrEmpty(record.Symptoms) ? "-" : (record.Symptoms.Length > 50 ? record.Symptoms.Substring(0, 50) + "..." : record.Symptoms))</td>
                        <td>@(string.IsNullOrEmpty(record.Diagnosis) ? "-" : (record.Diagnosis.Length > 50 ? record.Diagnosis.Substring(0, 50) + "..." : record.Diagnosis))</td>
                        <td>@record.VeterinarianName</td>
                        <td>
                            @if (record.Prescriptions != null && record.Prescriptions.Any())
                            {
                                <span class="badge bg-success">@record.Prescriptions.Count thuốc</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Không có</span>
                            }
                        </td>
                        <td class="text-end">
                            <a asp-page="./Details" asp-route-id="@record.Id" class="btn btn-sm btn-outline-info">
                                <i class="bi bi-eye"></i> Chi tiết
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="alert alert-info">
        <i class="bi bi-info-circle"></i>
        @if (Model.PetId.HasValue || !string.IsNullOrEmpty(Model.SearchTerm))
        {
            <span>Tìm thấy: <strong>@Model.MedicalRecords.Count</strong> / @Model.AllMedicalRecords.Count hồ sơ khám</span>
        }
        else
        {
            <span>Tổng số: <strong>@Model.MedicalRecords.Count</strong> hồ sơ khám</span>
        }
    </div>
}
else
{
    <div class="alert alert-warning">
        <i class="bi bi-exclamation-triangle"></i>
        @if (Model.PetId.HasValue)
        {
            <span>Không tìm thấy hồ sơ khám nào cho Pet #@Model.PetId</span>
        }
        else if (!string.IsNullOrEmpty(Model.SearchTerm))
        {
            <span>Không tìm thấy hồ sơ khám nào với từ khóa "@Model.SearchTerm"</span>
        }
        else
        {
            <span>Chưa có hồ sơ khám bệnh nào trong hệ thống.</span>
        }
    </div>
}