@page "/appointments"
@model PetHotelManager.Pages.Appointments.IndexModel
@{
    ViewData["Title"] = "Quản lý Lịch hẹn";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center">
    <h1>@ViewData["Title"]</h1>
</div>

<form method="get" class="mb-3">
    <div class="input-group">
        <input type="text" class="form-control" placeholder="Tìm theo tên khách, thú cưng, dịch vụ..." asp-for="SearchTerm" />
        <button class="btn btn-outline-secondary" type="submit"><i class="bi bi-search"></i> Tìm kiếm</button>
    </div>
</form>

<div class="table-responsive">
    <table class="table table-striped table-sm">
        <thead>
            <tr>
                <th scope="col">Ngày hẹn</th>
                <th scope="col">Khách hàng</th>
                <th scope="col">Thú cưng</th>
                <th scope="col">Dịch vụ/Phòng</th>
                <th scope="col">Trạng thái</th>
                <th scope="col" class="text-end">Hành động</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.PaginatedList.Data != null && Model.PaginatedList.Data.Any())
            {
                @foreach (var appt in Model.PaginatedList.Data)
                {
                    <tr>
                        <td>@appt.AppointmentDate.ToLocalTime().ToString("dd/MM/yyyy HH:mm")</td>
                        <td>@appt.CustomerName</td>
                        <td>@appt.PetName</td>
                        <td>@(appt.ServiceName ?? appt.RoomName)</td>
                        <td>
                            @{
                                var statusClass = "bg-secondary";
                                switch (appt.Status?.ToLower())
                                {
                                    case "pending": statusClass = "bg-warning text-dark"; break;
                                    case "accepted": statusClass = "bg-success"; break;
                                    case "rejected":
                                    case "cancelled": statusClass = "bg-danger"; break;
                                    case "completed": statusClass = "bg-primary"; break;
                                }
                            }
                            <span class="badge @statusClass">@appt.Status</span>
                        </td>
                        <td class="text-end">
                            <a asp-page="./Details" asp-route-id="@appt.Id" class="btn btn-sm btn-outline-info">Chi tiết</a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="6" class="text-center">Không tìm thấy lịch hẹn nào.</td>
                </tr>
            }
        </tbody>
    </table>
</div>

@{
    var pagination = Model.PaginatedList.Pagination;
}
@if (pagination != null && pagination.TotalPages > 1)
{
    <nav>
        <ul class="pagination">
            <li class="page-item @(pagination.HasPreviousPage ? "" : "disabled")">
                <a class="page-link" asp-page="./Index" asp-route-CurrentPage="@(pagination.PageNumber - 1)" asp-route-SearchTerm="@Model.SearchTerm">Trước</a>
            </li>

            @for (int i = 1; i <= pagination.TotalPages; i++)
            {
                <li class="page-item @(i == pagination.PageNumber ? "active" : "")">
                    <a class="page-link" asp-page="./Index" asp-route-CurrentPage="@i" asp-route-SearchTerm="@Model.SearchTerm">@i</a>
                </li>
            }

            <li class="page-item @(pagination.HasNextPage ? "" : "disabled")">
                <a class="page-link" asp-page="./Index" asp-route-CurrentPage="@(pagination.PageNumber + 1)" asp-route-SearchTerm="@Model.SearchTerm">Sau</a>
            </li>
        </ul>
    </nav>
}