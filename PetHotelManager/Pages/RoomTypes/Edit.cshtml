@page
@model PetHotelManager.Pages.RoomTypes.EditModel
@{
    ViewData["Title"] = "Sửa loại phòng";
}

<h2 class="mb-3">Sửa loại phòng #@Model.Form.Id</h2>

@if (!string.IsNullOrEmpty(Model.Error))
{
    <div class="alert alert-danger">@Model.Error</div>
}

<form method="post" class="row g-3">
    <input type="hidden" asp-for="Form.Id" />
    <div class="col-md-6">
        <label class="form-label">Tên loại</label>
        <input asp-for="Form.TypeName" class="form-control" />
        <span class="text-danger" asp-validation-for="Form.TypeName"></span>
    </div>
    <div class="col-md-6">
        <label class="form-label">Giá/ngày</label>
        <input asp-for="Form.PricePerDay" type="number" class="form-control" />
        <span class="text-danger" asp-validation-for="Form.PricePerDay"></span>
    </div>
    <div class="col-12">
        <label class="form-label">Mô tả</label>
        <textarea asp-for="Form.Description" class="form-control" rows="2"></textarea>
        <span class="text-danger" asp-validation-for="Form.Description"></span>
    </div>
    <div class="col-12">
        <button class="btn btn-primary">Lưu</button>
        <a href="/RoomTypes" class="btn btn-outline-secondary">Hủy</a>
    </div>
</form>