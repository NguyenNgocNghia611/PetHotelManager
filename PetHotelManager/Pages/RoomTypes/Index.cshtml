@page
@model PetHotelManager.Pages.RoomTypes.IndexModel
@{
    ViewData["Title"] = "Quản lý Loại phòng";
}

<h2 class="mb-3">Quản lý Loại phòng</h2>

<div class="d-flex justify-content-between mb-3">
    <form method="get" class="d-flex gap-2">
        <input name="Search" value="@Model.Search" class="form-control form-control-sm" placeholder="Tìm theo tên / mô tả" />
        <button class="btn btn-sm btn-outline-primary">Lọc</button>
    </form>
    <a class="btn btn-sm btn-primary" href="/RoomTypes/Create">+ Thêm mới</a>
</div>

@if (!string.IsNullOrEmpty(Model.Error))
{
    <div class="alert alert-danger">@Model.Error</div>
}
@if (!string.IsNullOrEmpty(Model.Success))
{
    <div class="alert alert-success">@Model.Success</div>
}

<div class="table-responsive">
    <table class="table table-sm align-middle">
        <thead>
            <tr>
                <th>#</th>
                <th>Tên loại</th>
                <th>Giá/ngày</th>
                <th>Mô tả</th>
                <th style="width:140px"></th>
            </tr>
        </thead>
        <tbody>
        @if (Model.Items.Count > 0)
        {
            foreach (var r in Model.Items)
            {
                <tr>
                    <td>@r.Id</td>
                    <td>@r.TypeName</td>
                    <td>@r.PricePerDay.ToString("n0")</td>
                    <td>@r.Description</td>
                    <td class="d-flex gap-1">
                        <a class="btn btn-sm btn-outline-secondary" href="/RoomTypes/Edit?id=@r.Id">Sửa</a>
                        <form method="post" asp-page-handler="Delete" onsubmit="return confirm('Xác nhận xóa loại phòng?');">
                            <input type="hidden" name="id" value="@r.Id" />
                            <button class="btn btn-sm btn-outline-danger">Xóa</button>
                        </form>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr><td colspan="5" class="text-center text-muted">Không có dữ liệu</td></tr>
        }
        </tbody>
    </table>
</div>