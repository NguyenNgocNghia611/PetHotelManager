@page
@model PetHotelManager.Pages.Services.EditModel
@{
    ViewData["Title"] = "Sửa dịch vụ";
}

<h2 class="mb-3">Sửa dịch vụ #@Model.Form.Id</h2>

@if (!string.IsNullOrEmpty(Model.Error))
{
    <div class="alert alert-danger">@Model.Error</div>
}

<form method="post" class="row g-3">
    <input type="hidden" asp-for="Form.Id" />
    <div class="col-md-6">
        <label class="form-label">Tên</label>
        <input asp-for="Form.Name" class="form-control" />
        <span class="text-danger" asp-validation-for="Form.Name"></span>
    </div>
    <div class="col-md-6">
        <label class="form-label">Nhóm</label>
        <input asp-for="Form.Category" class="form-control" />
        <span class="text-danger" asp-validation-for="Form.Category"></span>
    </div>
    <div class="col-md-4">
        <label class="form-label">Giá</label>
        <input asp-for="Form.Price" type="number" class="form-control" />
        <span class="text-danger" asp-validation-for="Form.Price"></span>
    </div>
    <div class="col-md-4">
        <label class="form-label">Đơn vị</label>
        <input asp-for="Form.Unit" class="form-control" />
        <span class="text-danger" asp-validation-for="Form.Unit"></span>
    </div>

    <div class="col-12">
        <button class="btn btn-primary">Lưu</button>
        <a href="/Services" class="btn btn-outline-secondary">Hủy</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}