@page
@model PetHotelManager.Pages.Services.IndexModel
@{
    ViewData["Title"] = "Quản lý Dịch vụ";
}

<h2 class="mb-3">Quản lý Dịch vụ</h2>

<div class="d-flex justify-content-between mb-3">
    <form method="get" class="d-flex gap-2">
        <input name="Search" value="@Model.Search" class="form-control form-control-sm" placeholder="Tìm theo tên / nhóm" />
        <button class="btn btn-sm btn-outline-primary">Lọc</button>
    </form>
    <a class="btn btn-sm btn-primary" href="/Services/Create">+ Thêm mới</a>
</div>

@if (!string.IsNullOrEmpty(Model.Error))
{
    <div class="alert alert-danger">@Model.Error</div>
}
@if (!string.IsNullOrEmpty(Model.Success))
{
    <div class="alert alert-success">@Model.Success</div>
}

<div class="table-responsive">
    <table class="table table-sm align-middle">
        <thead>
            <tr>
                <th>#</th>
                <th>Tên</th>
                <th>Nhóm</th>
                <th>Giá</th>
                <th>Đơn vị</th>
                <th style="width:140px"></th>
            </tr>
        </thead>
        <tbody>
        @if (Model.Items.Count > 0)
        {
            foreach (var s in Model.Items)
            {
                <tr>
                    <td>@s.Id</td>
                    <td>@s.Name</td>
                    <td>@s.Category</td>
                    <td>@s.Price.ToString("n0")</td>
                    <td>@s.Unit</td>
                    <td class="d-flex gap-1">
                        <a class="btn btn-sm btn-outline-secondary" href="/Services/Edit?id=@s.Id">Sửa</a>
                        <form method="post" asp-page-handler="Delete" onsubmit="return confirm('Xác nhận xóa dịch vụ?');">
                            <input type="hidden" name="id" value="@s.Id" />
                            <button class="btn btn-sm btn-outline-danger">Xóa</button>
                        </form>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr><td colspan="6" class="text-center text-muted">Không có dữ liệu</td></tr>
        }
        </tbody>
    </table>
</div>