@page "/customers"
@model PetHotelManager.Pages.Customers.IndexModel
@{
    ViewData["Title"] = "Quản lý Khách hàng";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center">
    <h1>@ViewData["Title"]</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <a asp-page="Create" class="btn btn-sm btn-outline-primary">
            <i class="bi bi-plus-circle-fill"></i>
            Thêm mới Khách hàng
        </a>
    </div>
</div>

<form method="get" class="mb-3">
    <div class="input-group">
        <input type="text" class="form-control" placeholder="Tìm theo tên, SĐT, email..." asp-for="SearchTerm" />
        <button class="btn btn-outline-secondary" type="submit">Tìm kiếm</button>
    </div>
</form>


<div class="table-responsive">
    <table class="table table-striped table-sm">
        <thead>
            <tr>
                <th scope="col">Họ và tên</th>
                <th scope="col">Email</th>
                <th scope="col">Số điện thoại</th>
                <th scope="col">Trạng thái</th>
                <th scope="col" class="text-end">Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model.CustomerList)
            {
                <tr>
                    <td>@customer.FullName</td>
                    <td>@customer.Email</td>
                    <td>@customer.PhoneNumber</td>
                    <td>
                        @if (customer.IsActive)
                        {
                            <span class="badge bg-success">Hoạt động</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Vô hiệu hóa</span>
                        }
                    </td>
                    <td class="text-end">
                        <a asp-page="./Edit" asp-route-id="@customer.Id" class="btn btn-sm btn-outline-secondary">Sửa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>